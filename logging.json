{
  "version": 1,
  "disable_existing_loggers": true,
  "formatters": {
    "standard": {
      "format": "%(asctime)s [%(levelname)s] [%(lineno)s] %(name)s: %(message)s"
    }
  },
  "handlers": {
    "console": {
      "level": "INFO",
      "class": "logging.StreamHandler",
      "formatter": "standard"
    },
    "file": {
      "level": "INFO",
      "class": "logging.FileHandler",
      "formatter": "standard",
      "filename": "app.log",
      "mode": "a"
    },
    "http": {
      "level": "INFO",
      "class": "logging.handlers.HTTPHandler",
      "host": "loc.logger.services.local:50000",
      "url": "/log?app=%D0%9F%D0%B0%D1%80%D1%81%D0%B5%D1%80.%D0%94%D0%9A.%D0%93%D0%B8%D0%B1%D0%B4%D0%B4",
      "method": "POST",
      "formatter": "standard"
    }
  },
  "loggers": {
    "": {
      "handlers": [
        "console",
        "file",
        "http"
      ],
      "level": "INFO",
      "propagate": false
    }
  }
}